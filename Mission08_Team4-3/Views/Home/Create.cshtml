@{
}

@model Todos

<h2>Create New Task</h2>

<form method="post">
    <div>
        <label asp-for="Task">Task:</label>
        <input asp-for="Task"/>
    </div>
    <br />
    <div>
        <label asp-for="Due_Date">Due Date:</label>
        <input asp-for="Due_Date"/>
    </div>
    <br />
    <div>
        <label asp-for="Quadrant">Quadrant:</label>
        <select asp-for="Quadrant"required>
            <option value="Quadrant1">Urgent/Important</option>
            <option value="Quadrant2">Not Urgent/Important</option>
            <option value="Quadrant3">Urgent/Not Important</option>
            <option value="Quadrant4">Not Urgent/Not Important</option>
        </select><br><br>
    </div>
    <br />
    <div>
        <label asp-for="Category" class="form-label">Category:</label>
        <select asp-for="Category" class="form-control">
            <option value="">Choose...</option>
            @foreach (var m in ViewBag.Categories)
            {
                <option value="@m.Category">@m.Category</option>
            }
        </select>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>