@{
    ViewData["Title"] = "Edit Tasks";
}

@model CreateTasks

<h1>@ViewData["Title"]</h1>

<div class="task-quadrants">
    @foreach (var quadrant in new[] { (true, true), (true, false), (false, true), (false, false) })
    {
        var tasksInQuadrant = Model.Where(t => t.IsImportant == quadrant.Item1 && t.IsUrgent == quadrant.Item2 && !t.IsCompleted);
        if (tasksInQuadrant.Any())
        {
            <div class="@($"quadrant-{quadrant.Item1}-{quadrant.Item2}")">
                <h3>@($"Quadrant {(quadrant.Item1 ? "I" : quadrant.Item2 ? "III" : "IV")}: {(quadrant.Item1 ? "Important" : "Not Important")} / {(quadrant.Item2 ? "Urgent" : "Not Urgent")}</h3>
                <ul>
                    @foreach (var task in tasksInQuadrant)
                    {
                        <li>
                            <span>@task.Title</span>
                            <!-- Update Form -->
                            <form action="/Tasks/Update/@task.Id" method="post">
                                <!-- Include fields for task details with current values as defaults -->
                                <input type="submit" value="Update Task" />
                            </form>
                            <!-- Delete Form -->
                            <form action="/Tasks/Delete/@task.Id" method="post">
                                <input type="submit" value="Delete Task" onclick="return confirm('Are you sure?');" />
                            </form>
                            <!-- Complete Form -->
                            <form action="/Tasks/Complete/@task.Id" method="post">
                                <input type="submit" value="Mark as Completed" />
                            </form>
                        </li>
                    }
                </ul>
            </div>
        }
    }
</div>

<style>
    .task-quadrants { display: flex; flex-wrap: wrap; }
    .quadrant-true-true, .quadrant-true-false, .quadrant-false-true, .quadrant-false-false { width: 50%; }
    /* Add styles for your quadrants, forms, and navigation menu here */
</style>
